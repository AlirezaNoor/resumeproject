@model Resume.Models.skillView
<form class="form-horizontal" method="post">
    <div class="card-body">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">ایمیل</label>

            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Skill.subject" class="form-control" id="inputEmail3" placeholder="مهارت را وارد کنید">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">پسورد</label>

            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Skill.ability" class="form-control" id="inputPassword3" placeholder="درصد را وارد کنید">
            </div>
        </div>

    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <input type="submit" class="btn btn-info" placeholder="ثبت">

    </div>
    <!-- /.card-footer -->

</form>
<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">جدول ۱</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>

                        <th>توانایی</th>
                        <th>پیشرفت</th>
                        <th style="width: 40px">درصد</th>
                        <th style="width: 40px">عملیات</th>
                    </tr>
                    @foreach (var i in @Model.List)
                    {
                        <form>
                        <tr>
                            <td>@i.subject</td>
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: @i.ability%"></div>
                                </div>
                            </td>
                            <td><span class="badge bg-danger">@i.ability%</span></td>
                            <td>

                                <a class="btn btn-block btn-danger  " asp-route-id="@i.Id" asp-action="skilldel"> حذف</a>

                            </td>
                        </tr>
                        </form>

                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <!-- /.card -->
</div>